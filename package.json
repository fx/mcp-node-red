{
  "name": "mcp-node-red",
  "version": "1.1.0",
  "description": "MCP server for Node-RED workflow management",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-node-red": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "prepare": "husky"
  },
  "keywords": ["mcp", "node-red", "model-context-protocol", "workflow", "automation"],
  "author": "",
  "license": "MIT",
  "files": ["dist", "README.md", "LICENSE", "CHANGELOG.md"],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "dotenv": "^17.3.1",
    "undici": "^7.3.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.10.5",
    "@vitest/coverage-v8": "^2.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20"
  },
  "lint-staged": {
    "*.{js,ts,json}": [
      "biome format --write --files-ignore-unknown=true",
      "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  }
}
